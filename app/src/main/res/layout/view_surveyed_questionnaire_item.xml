<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#ddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_surveyed_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/surveyed_sign" />

        <TextView
            android:id="@+id/surveyed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@id/iv_surveyed_sign"
            android:text="问卷标题"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_survey_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/survey_arrow" />


        <ImageView
            android:id="@+id/iv_survey_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/surveyed_title"
            android:layout_below="@id/surveyed_title"
            android:src="@mipmap/survey_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/surveyed_title"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_survey_time"
            android:text="2017-11-21"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_survey_arrow"
            android:layout_below="@id/surveyed_title"
            android:text="1250"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/surveyed_title"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_amount"
            android:src="@mipmap/survey_amount" />
    </RelativeLayout>
</LinearLayout>