<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_portrait_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:src="#80eb633b" />

            <ImageView
                android:id="@+id/user_portrait"
                android:layout_width="@dimen/userName_bigPortraitSize"
                android:layout_height="@dimen/userName_bigPortraitSize"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:background="@drawable/user_info_portrait_bg"
                android:src="@mipmap/default_portrait" />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <!--<TextView-->
                <!--style="@style/activity_userinfo_title_style"-->
                <!--android:text="用户ID" />-->

            <TextView
                style="@style/activity_userinfo_title_style"
                android:text="用户名" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#70cccccc" />

            <TextView
                style="@style/activity_userinfo_title_style"
                android:text="性别" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#70cccccc" />
            <!--<TextView-->
            <!--style="@style/activity_userinfo_title_style"-->
            <!--android:text="年龄" />-->

            <!--<TextView-->
            <!--style="@style/activity_userinfo_title_style"-->
            <!--android:text="个人签名" />-->

            <TextView
                style="@style/activity_userinfo_title_style"
                android:text="手机号码" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:orientation="vertical">

            <!--<TextView-->
                <!--android:id="@+id/user_id"-->
                <!--style="@style/activity_userinfo_title_style"-->
                <!--android:text="id" />-->

            <TextView
                android:id="@+id/user_name"
                style="@style/activity_userinfo_title_style"
                android:text="name" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#70cccccc" />

            <TextView
                android:id="@+id/user_sex"
                style="@style/activity_userinfo_title_style"
                android:text="sex" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#70cccccc" />
            <!--<TextView-->
            <!--style="@style/activity_userinfo_title_style"-->
            <!--android:text="age" />-->

            <!--<TextView-->
            <!--style="@style/activity_userinfo_title_style"-->
            <!--android:text="个人签名" />-->

            <TextView
                android:id="@+id/user_phone_num"
                style="@style/activity_userinfo_title_style"
                android:text="phone_num" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_bg_normal"
        android:text="加好友"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#70cccccc" />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/scan_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="扫一扫，加我好友！"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_below="@id/scan_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>