<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_bg">

        <LinearLayout
            android:id="@+id/user_item_img_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boder">

            <ImageView
                android:id="@+id/user_item_img_left"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/user_item_img_right"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:scaleType="fitXY" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_item_img_layout"
            android:background="@drawable/user_item_circular_bg"
            android:padding="5dp"
            android:radius="10dp"
            android:singleLine="false"
            android:text="@string/question_content"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>