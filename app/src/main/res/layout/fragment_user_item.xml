<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="10dp"
	>


	<LinearLayout
		android:id="@+id/user_item_img_layout"
		android:layout_width="200dp"
		android:background="@drawable/boder"
		android:layout_height="wrap_content">

		<com.loopj.android.image.SmartImageView
			android:id="@+id/user_item_img_left"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="150dp"
			android:src="@mipmap/ic_launcher"
			android:layout_marginRight="5dp"
			/>
		<com.loopj.android.image.SmartImageView
			android:id="@+id/user_item_img_right"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="150dp"
			android:src="@mipmap/ic_launcher"
			/>

	</LinearLayout>

	<TextView
		android:id="@+id/user_tv_question"
		android:padding="5dp"
		android:layout_below="@id/user_item_img_layout"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:singleLine="false"
		android:background="#60eb633b"
		android:text="@string/question_content"
		android:textSize="15dp"
		/>



</RelativeLayout>