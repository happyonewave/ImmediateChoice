<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleIOS7</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--<item name="colorAccent">@color/white</item>-->

    </style>
    <!-- IOS7样式 -->
    <style name="ActionSheetStyleIOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#1E82FF</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">12sp</item>
    </style>
    <style name="info_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="top_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="register_nav_style">
        <item name="android:textColor">@color/bright_foreground_light_disabled</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="push_style">
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:padding="20dp"-->
        <!--android:background="@drawable/iv_push_bg"-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/iv_push_bg</item>
    </style>

    <style name="questionnaire_style">
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:padding="20dp"-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/iv_push_bg</item>
    </style>

    <style name="bt_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/bt_textcolor</item>
        <!--<item name="android:textColor">@color/apporange</item>-->
        <item name="android:textSize">10sp</item>
    </style>

    <style name="comment_Dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowNoTitle">true</item>//无标题
        <!--<item name="android:windowBackground">@null</item>//背景-->
        <!--<item name="android:windowIsFloating">true</item>//悬浮-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="NumberProgressBar_Funny_Orange">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#FF530D</item>
        <item name="progress_text_size">15sp</item>
        <item name="progress_text_color">#FF530D</item>

        <item name="progress_reached_bar_height">10dp</item>
        <item name="progress_unreached_bar_height">10dp</item>
    </style>

    <style name="activity_userinfo_title_style">

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_rowWeight="1"-->
